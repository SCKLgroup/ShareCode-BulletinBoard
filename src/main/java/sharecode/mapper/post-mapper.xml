<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="post">

	<insert id="insertPost" parameterType="sharecode.vo.PostVO">
		<selectKey keyProperty="post_no" resultType="int" order="BEFORE">
			SELECT POST_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO POST 
		(POST_NO, USER_NO, POST_TITLE, POST_CONTENT, POST_CATEGORY, POST_HIT, POST_DATE)
		VALUES(#{post_no}, 1, #{post_title}, #{post_content}, #{post_category},0,SYSDATE)
	</insert>
	
	<select id="selectLangCategory" parameterType="String" resultType="sharecode.vo.PostVO"> 
		SELECT
		POST_NO,USER_NO,POST_TITLE,POST_CONTENT,POST_CATEGORY,POST_HIT,POST_DATE
		FROM POST
		WHERE POST_CATEGORY= #{value}
	</select>

 
</mapper>
